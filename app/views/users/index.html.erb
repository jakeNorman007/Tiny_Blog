<body>
  <main>
    <h1>TinyBlog users.</h1>
    <div>
      <% @users.each do |user| %>
        <article>
          <header>
            <div>
             <%= link_to user.username, user %>
            </div>
          </header>
          <%= pluralize(user.articles.count, "article") %>
          <footer>
            <%= link_to "View profile.", user %>
            <br/>
            <small>Joined <%= time_ago_in_words(user.created_at) %> ago. </small>
          </footer>
        </article>
      <% end %>  
    </div>
    <%= link_to 'Return home.', root_path %>
  </main>
</body> 